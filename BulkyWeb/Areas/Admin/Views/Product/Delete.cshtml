@model Product
<div class="card shadow border-0 mt-4">
    <div class="card-header bg-light bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center text-secondary">
                <h2 class="text-se"> Delete Product</h2>
            </div>
        </div>
    
        <div class="card-body pt-4">
            <form method="post">
                <input asp-for="Id" hidden/> 
                <div class="border p-3 mt-4">
                    <div class="row pb-2">
                        <hr/>
                    </div>
                    <div asp-validation-summary="ModelOnly"></div>
                    <div class="form-floating py-2 col-12">
                                          <input asp-for="Title" type="text" class="form-select border-0 shadow"/>
                                          <label asp-for="Title"  class="ms-2"></label>
                                          <span asp-validation-for="Title" class="text-danger"></span>
                                      </div>
                                      <div class="form-floating py-2 col-12">
                                          <textarea  asp-for="Description" type="text" class="form-select border-0 shadow"></textarea>
                                          <label asp-for="Description" class="ms-2"></label>
                                          <span asp-validation-for="Description" class="text-danger"></span>
                                      </div>
                                      <div class="form-floating py-2 col-12">
                                          <input asp-for="ISBN" type="text" class="form-select border-0 shadow"/>
                                          <label asp-for="ISBN"  class="ms-2"></label>
                                          <span asp-validation-for="ISBN" class="text-danger"></span>
                                      </div>
                                      <div class="form-floating py-2 col-12">
                                          <input asp-for="Author" type="text" class="form-select border-0 shadow"/>
                                          <label asp-for="Author"  class="ms-2"></label>
                                          <span asp-validation-for="Author" class="text-danger"></span>
                                      </div>
                                      <div class="form-floating py-2 col-12">
                                          <input asp-for="ListPrice" type="text" class="form-select border-0 shadow"/>
                                          <label asp-for="ListPrice"  class="ms-2"></label>
                                          <span asp-validation-for="ListPrice" class="text-danger"></span>
                                      </div>
                                      <div class="form-floating py-2 col-12">
                                          <input asp-for="Price" type="text" class="form-select border-0 shadow"/>
                                          <label asp-for="Price"  class="ms-2"></label>
                                          <span asp-validation-for="Price" class="text-danger"></span>
                                      </div>
                                      <div class="form-floating py-2 col-12">
                                          <input asp-for="Price50" type="text" class="form-select border-0 shadow"/>
                                          <label asp-for="Price50"  class="ms-2"></label>
                                          <span asp-validation-for="Price50" class="text-danger"></span>
                                      </div>
                                      <div class="form-floating py-2 col-12">
                                          <input asp-for="Price100" type="text" class="form-select border-0 shadow"/>
                                          <label asp-for="Price100"  class="ms-2"></label>
                                          <span asp-validation-for="Price100" class="text-danger"></span>
                                      </div>
        
                    <div class="row">
                        <div class="col-6 col-md-3">
                            <button type="submit" class="btn btn-danger form-control">Delete</button>
                        </div>
                        <div class="col-6 col-md-3">
                            <button asp-controller="Product" asp-action="Index" class="btn btn-secondary border form-control ">Back to list</button>
                        </div>
                    </div>
        
        
                </div>
            </form>
        </div>
    </div>
</div>