@{
    var status = Context.Request.Query["status"];
    var pending = "text-secondary";
    var inprocess = "text-secondary";
    var completed = "text-secondary";
    var approved = "text-secondary";
    var all = "text-secondary";
    var delayed = "text-secondary";

    switch (status)
    {
        case "pending":
            pending = "active text-light bg-primary";
            break;
        case "inprocess":
            inprocess = "active text-light bg-primary";
            break;
        case "completed":
            completed = "active text-light bg-primary";
            break;
        case "approved":
            approved = "active text-light bg-primary";
            break;
            case "delayed":
                delayed = "active text-light bg-primary";
                break;
        case "all":
            all = "active text-light bg-primary";
            break;
            default:
                all = "active text-white";
                break;
    }
    
}


<div class="card shadow border-0 my-4">
    <div class="card-header text-light  bg-gradient ml-0 py-3">
        <div class="row">
            <h1 class="py-2">Order List</h1>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="d-flex justify-content-between pb-5 pt-2" >
       <span></span> 
            <ul class="list-group list-group-horizontal-sm">
                <a style="text-decoration: #701b58" asp-controller="Order" asp-action="Index" asp-route-status="inprocess">
                    <li class="list-group-item @inprocess">In Process</li></a>
                <a style="text-decoration: #701b58" asp-controller="Order" asp-action="Index" asp-route-status="pending">
                    <li class="list-group-item @pending">Payment Pending</li></a>
                <a style="text-decoration: #701b58" asp-controller="Order" asp-action="Index" asp-route-status="delayed">
                    <li class="list-group-item @delayed">Delayed Payment</li></a>
                <a style="text-decoration: #701b58" asp-controller="Order" asp-action="Index" asp-route-status="completed">
                    <li class="list-group-item @completed">Completed</li></a>
                <a style="text-decoration: #701b58" asp-controller="Order" asp-action="Index" asp-route-status="approved">
                    <li class="list-group-item @approved">Approved</li></a>
                <a style="text-decoration: #701b58" asp-controller="Order" asp-action="Index" asp-route-status="all">
                    <li class="list-group-item @all">All</li></a>
                
            </ul>
        </div>
        <table id="tblData" class="table table-bordered table-striped" style="width:100%">
            <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>SurName</th>
                <th>Phone Number</th>
                <th>Email</th>
                <th>Status</th>
                <th>Total</th>
                <th></th>

                </tr>
            </thead>
        </table>

    </div>
</div>

@section Scripts{
    <script src="~/js/order.js"></script>
}