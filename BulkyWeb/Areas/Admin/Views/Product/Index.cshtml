@model List<Product>

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center text-primary">
                <h1>Product List</h1>
            </div>
        </div>
    
        <div class="card-body pt-4">
            
            

            <table class="table table-bordered table-striped">
                <thead>
                <tr>
                    <th>Title</th>
                    <th>ISBN</th>
                    <th>Price</th>
                    <th>Author</th>
                    <th>Category</th>
                    <th class="text-end">
                        <a asp-controller="Product" asp-action="Create"> <i class="bi bi-plus-circle-dotted"></i> Add new Product</a>
                    </th>
                </tr>
                </thead>
                <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td>@obj.Title</td>
                        <td>@obj.ISBN</td>
                        <td>@obj.Price</td>
                        <td>@obj.Author</td>
                        <td></td>

                        <td>
                            <a asp-controller="Product" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2"><i class="bi bi-pencil"></i> Edit</a>
                            <a asp-controller="Product" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2"><i class="bi bi-trash"></i> Delete</a>
                        </td>
                    </tr>

                }
                </tbody>
            </table>
        </div>    
    </div>
</div>